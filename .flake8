[flake8]
ignore =
    # multiple spaces before operator
    E221,
    # multiple spaces after separator
    E241

exclude =
    manage.py,
    Makefile,
    migrations,
    docs,
    __pycache__

format = ${cyan}%(path)s${reset}:${yellow_bold}%(row)d${reset}:${green_bold}%(col)d${reset}: ${red_bold}%(code)s${reset} %(text)s
